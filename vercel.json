{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "buildCommand": "bun run code:build",
    "devCommand": "bun run dev",
    "installCommand": "bun install",
    "framework":"hono",
    "outputDirectory": "build",
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/"
        }
    ],
    "functions": {
        "build/index.js": {
            "runtime": "bun@1.3.0",
            "memory": 2048,
            "maxDuration": 60
        }
    }
}